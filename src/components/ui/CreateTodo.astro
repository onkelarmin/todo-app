---
// Component imports
import CheckToggleFake from "@components/ui/CheckToggleFake.astro";
---

<form id="create-todo-form" novalidate>
  <CheckToggleFake />
  <label>
    <span class="visually-hidden">Enter a Todo</span>
    <input
      type="text"
      name="todo"
      id="create-todo-input"
      minlength="1"
      maxlength="80"
      required
      inputmode="text"
      placeholder="Create a new todoâ€¦"
    />
    <p id="todo-error" class="error"></p>
  </label>
</form>

<style lang="scss">
  form {
    position: relative;
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: var(--space-cont-lg);
    background-color: var(--bg-container-default);
    border: var(--bw-default-focus) solid transparent;
    border-radius: var(--br-md);
    box-shadow: var(--bs-todos);
    padding-block: var(--pad-cont-xs);
    padding-inline: var(--pad-cont-sm);
    transition: border-color var(--trans-default);

    &:has(input:focus-visible) {
      border-color: var(--bc-default-focus);
    }

    &:has(input[aria-invalid="true"]) {
      border-color: var(--fg-text-error);

      .error {
        display: block;
      }
    }
  }

  label {
    display: block;
    width: 100%;
  }

  input {
    width: 100%;
    font: var(--font-1);
    border: none;
    background-color: transparent;
    caret-color: var(--fg-text-active);

    &::placeholder {
      color: var(--fg-text-placeholder);
    }

    &:focus-visible {
      outline: none;
    }
  }

  .error {
    display: none;
    position: absolute;
    bottom: var(--size-4);
    left: calc(
      var(--pad-cont-sm) + var(--size-20px-24px-24px) + var(--space-cont-lg)
    );
    font: var(--font-4);
    color: var(--fg-text-error);
  }
</style>
