---
// Asset imports
// import Icon from "@assets/"

// Types
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  variant: "nav" | "hero" | "cta" | "card";
  text?: string;
  icon?: string;
  classes?: string;
}

const { href, variant, text, icon, classes, ...rest } = Astro.props;
---

<a href={href} class:list={["btn", variant, classes]} {...rest}>
  {text && <span class="text">{text}</span>}
  <!-- {icon && <Icon class="icon" />} -->
</a>

<style lang="scss">
  .btn {
    width: fit-content;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--btn-gap-default);
    text-transform: none;
    text-decoration: none;
    border-style: solid;
    border-width: var(--btn-border-width-default);
    border-radius: var(--btn-border-radius-default);
    transition:
      color var(--trans-default),
      background-color var(--trans-default),
      border-color var(--trans-default);

    &:not(:disabled) {
      cursor: pointer;
    }

    &:focus {
      outline: 0px solid transparent;
    }

    .icon {
      width: var(--btn-icon-size-default);
      aspect-ratio: 1;
      color: inherit;
    }

    // Variants
    &:is(.nav, .hero, .cta, .card) {
      background-color: var(--btn-bg-color-idle-default);
      color: var(--btn-fg-color-idle-default);

      @media (hover: hover) {
        &:hover {
          background-color: var(--btn-bg-color-hover-default);
          color: var(--btn-fg-color-hover-default);
        }
      }

      &:active {
        // No pressed state
      }

      &:focus-visible {
        outline: var(--btn-outline-width-default) solid
          var(--btn-outline-color-focus-default);
        outline-offset: var(--btn-offset-width-default);
      }
    }

    &.nav {
      padding-inline: var(--btn-padding-inline-nav);
      padding-block: var(--btn-padding-block-nav);
      font: var(--font-5);
      letter-spacing: var(--ls-md);
    }

    &.hero {
      padding-inline: var(--btn-padding-inline-hero);
      padding-block: var(--btn-padding-block-hero);
      font: var(--font-5);
      letter-spacing: var(--ls-md);
    }

    &.cta {
      padding-inline: var(--btn-padding-inline-cta);
      padding-block: var(--btn-padding-block-cta);
      font: var(--font-11);
      letter-spacing: var(--ls-none);
    }

    &.card {
      padding-inline: var(--btn-padding-inline-card);
      padding-block: var(--btn-padding-block-card);
      font: var(--font-8);
      letter-spacing: var(--ls-xl);
      border-radius: var(--btn-border-radius-card);
    }
  }
</style>
